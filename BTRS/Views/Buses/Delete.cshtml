@model BTRS.Models.Bus

@{
    ViewData["Title"] = "Delete";
}

<div class="button-container">
    <p>
        <a asp-action="Index" asp-controller="Trips" class="btn btn-secondary">Trips</a>
        <a asp-action="Index" asp-controller="Buses" class="btn btn-secondary">Buses</a>
        <a asp-action="Logout" asp-controller="Passenger" id="logout-button">Logout</a>
    </p>
</div>

<h3 id="booking-title">Are you sure you want to delete this bus?</h3>
<div class="booking-card">
    <h4 class="card-title">Bus</h4>
    <hr class="custom-hr" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaptainName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaptainName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumOfSeats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumOfSeats)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BusID" />
        <input type="submit" value="Delete" class="btn btn-secondary" />
    </form>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
