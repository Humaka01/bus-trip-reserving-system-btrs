@model BTRS.Models.Bus

@{
    ViewData["Title"] = "Create";
}
<div class="button-container">
    <p>
        <a asp-action="Index" asp-controller="Trips" class="btn btn-secondary">Trips</a>
        <a asp-action="Index" asp-controller="Buses" class="btn btn-secondary">Buses</a>
        <a asp-action="Logout" asp-controller="Passenger" id="logout-button">Logout</a>
    </p>
</div>

<div class="form-container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" class="booking-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CaptainName" class="control-label"></label>
                    <input asp-for="CaptainName" class="form-control" />
                    <span asp-validation-for="CaptainName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumOfSeats" class="control-label"></label>
                    <input asp-for="NumOfSeats" class="form-control" />
                    <span asp-validation-for="NumOfSeats" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">TripID</label>

                    <select name="tripID" id="tripID" class="form-control" style="margin-bottom: 15px">
                        @foreach (var trip in ViewBag.Trips)
                        {
                                <option value="@trip.TripID">
                                @trip.Destination
                                    (@trip.StartDate.ToShortDateString() - @trip.EndDate.ToShortDateString())
                                </option>
                        }
                    </select>
                </div>

                <div class="admin-trip-buttons">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
