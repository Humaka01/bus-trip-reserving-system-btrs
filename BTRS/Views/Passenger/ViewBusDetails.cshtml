@model BTRS.Models.Trip

<h1 id="bus-details-title">Bus Details for Trip</h1>

<div class="container">
    <div class="button-container">
        <a asp-action="AvailableTripList" class="btn btn-secondary">Trips</a>
        <a asp-action="MyBookings" class="btn btn-secondary" id="my-bookings-button"><span>My Bookings</span></a>
        <a asp-action="Logout" asp-controller="Passenger" id="logout-button">Logout</a>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var bus in Model.Buses)
        {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Bus ID: @bus.BusID</h5>
                                    <p class="card-text"><strong>Captain Name: </strong>@bus.CaptainName</p>
                                    <p class="card-text"><strong>Number of Seats: </strong>@bus.NumOfSeats</p>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>